{% schema %}
{
  "name": "RH Instructors",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "tag",
      "label": "Tag Text",
      "default": "Top-tier training"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Tackle tech trends with the best in the industry"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Learn from real experts. Our author list is highly curated with 91% of them backed by at least 10 years experience in their field. Cast a wide learning net or develop a highly specialized learning path, reassured that you're getting top notch, up-to-speed insights."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View course library"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background",
      "default": "#FAFAFA"
    },
    {
      "type": "color",
      "id": "tag_color",
      "label": "Tag Color",
      "default": "#222875"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#0D0D0D"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background",
      "default": "#0D0D0D"
    }
  ],
  "blocks": [
    {
      "type": "instructor",
      "name": "Instructor",
      "settings": [
        {
          "type": "image_picker",
          "id": "profile_image",
          "label": "Profile Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Instructor Name",
          "default": "Jean 'Gladson' Tunis"
        },
        {
          "type": "text",
          "id": "experience",
          "label": "Experience",
          "default": "25 yrs. experience"
        },
        {
          "type": "text",
          "id": "courses",
          "label": "Number of Courses",
          "default": "4 courses"
        },
        {
          "type": "url",
          "id": "profile_link",
          "label": "Profile Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RH Instructors",
      "blocks": [
        {
          "type": "instructor"
        },
        {
          "type": "instructor"
        },
        {
          "type": "instructor"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.rh-instructor-care {
    background: {{ section.settings.background_color }};
    padding: 60px 20px;
}

.rh-instructor-care .container-rh {
    max-width: 1432px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 30px;
    justify-content: space-between;
}

.rh-instructor-care .container-rh .instructors {
    width: 45%;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.rh-instructor-care .container-rh .text-part {
    width: 45%;
}

.rh-instructor-care .container-rh .text-part .tag {
    color: {{ section.settings.tag_color }};
    font-family: "Karla", sans-serif;
    font-weight: 600;
    font-size: 20px;
    line-height: 150%;
}

.rh-instructor-care .container-rh .text-part .section-title {
    color: {{ section.settings.text_color }};
    font-family: "Ghost Trial", sans-serif;
    font-weight: 500;
    font-size: 60px;
    line-height: 120%;
    margin: 10px 0 20px;
}

.rh-instructor-care .container-rh .text-part .sec-des {
    color: {{ section.settings.text_color }};
    font-family: "Karla", sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 150%;
    margin: 0 0 10px;
}

.instructor-card {
    align-self: stretch;
    padding: 40px;
    background: white;
    border-radius: 16px;
    justify-content: space-between;
    align-items: center;
    display: flex;
    gap: 16px;
}

.instructor-card .rh-profile {
    justify-content: flex-start;
    align-items: center;
    gap: 24px;
    display: flex;
}

.instructor-card .rh-profile-img {
    width: 80px;
    height: 80px;
    border-radius: 4px;
}

.instructor-card .rh-info {
    max-width: 289px;
    width: 100%;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 14px;
    display: inline-flex;
}

.instructor-card .rh-name {
    align-self: stretch;
    color: #0D0D0D;
    font-size: 30px;
    font-family: 'Ghost Trial', sans-serif;
    font-weight: 500;
    line-height: 30px;
    word-wrap: break-word;
}

.instructor-card .rh-meta {
    align-self: stretch;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 8px;
    display: inline-flex;
}

.instructor-card .rh-check-icon {
    width: 16px;
    height: 16px;
    position: relative;
    margin: 4px 0 0;
}

.instructor-card .rh-description {
    color: #6E6E6E;
    font-size: 20px;
    font-family: 'Karla', sans-serif;
    font-weight: 400;
    line-height: 30px;
    word-wrap: break-word;
}

.instructor-card .rh-button {
    width: 60px;
    height: 60px;
    padding: 15px;
    background: {{ section.settings.button_bg_color }};
    border-radius: 30px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    display: flex;
}

@media (max-width: 1300px) {
    .rh-instructor-care .container-rh .instructors {
        width: 50%;
    }

    .rh-instructor-care .container-rh .text-part {
        width: 50%;
    }

    .instructor-card {
        padding: 25px;
    }
}

@media (max-width: 1190px) {
    .instructor-card .rh-name {
        font-size: 20px;
        line-height: 25px;
    }

    .instructor-card .rh-description {
        font-size: 14px;
        line-height: 20px;
    }
}

@media (max-width: 991px) {
    .rh-instructor-care .container-rh {
        flex-direction: column-reverse;
    }

    .rh-instructor-care .container-rh .text-part {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .rh-instructor-care .container-rh .instructors {
        width: 100%;
    }

    .rh-instructor-care .container-rh .text-part .tag {
        font-size: 14px;
        text-align: center;
    }

    .rh-instructor-care .container-rh .text-part .section-title {
        font-size: 42px;
        text-align: center;
        margin: 10px 0;
    }

    .rh-instructor-care .container-rh .text-part .sec-des {
        font-size: 14px;
        text-align: center;
    }

    .instructor-card .rh-button {
        width: 40px;
        height: 40px;
        padding: 10px;
    }

    .instructor-card {
        padding: 15px;
    }

    .instructor-card .rh-profile {
        gap: 14px;
    }
}

@media (max-width: 767px) {
    .rh-instructor-care .container-rh .text-part .section-title {
        font-size: 32px;
    }

    .instructor-card {
        flex-wrap: wrap;
        justify-content: center;
        width: fit-content;
        margin: 0 auto;
    }

    .instructor-card .rh-profile {
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .instructor-card .rh-name {
        text-align: center;
    }
}
</style>

<section class="rh-instructor-care">
  <div class="container-rh">
    <div class="instructors">
      {% for block in section.blocks %}
        {% if block.type == 'instructor' %}
          <div class="instructor-card" {{ block.shopify_attributes }}>
            <div class="rh-profile">
              {%- if block.settings.profile_image -%}
                {%- assign img_url = block.settings.profile_image | image_url: width: 160 -%}
                <img 
                  class="rh-profile-img" 
                  src="{{ img_url }}"
                  alt="{{ block.settings.name }}"
                  width="{{ block.settings.profile_image.width }}"
                  height="{{ block.settings.profile_image.height }}"
                  loading="lazy"
                >
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'rh-profile-img placeholder' }}
              {%- endif -%}
              <div class="rh-info">
                <div class="rh-name">{{ block.settings.name }}</div>
                <div class="rh-meta">
                  <div class="rh-check-icon">
