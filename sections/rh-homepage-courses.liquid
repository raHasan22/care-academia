{
  "name": "RH Homepage Courses",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Top Courses"
    }
  ],
  "blocks": [
    {
      "type": "collection_tab",
      "name": "Collection Tab",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RH Homepage Courses",
      "blocks": [
        {
          "type": "collection_tab"
        }, {
          "type": "collection_tab"
        }, {
          "type": "collection_tab"
        }
      ]
    }
  ]
}{% endschema %}<section class="rh-course-sec-care">
<div class="container-rh">
  <div class="title-arros">
    <div class="title">{{ section.settings.title }}</div>
    <div class="arros"></div>
  </div>
  <div class="tab-sec">
    <div class="tab-buttons">
      {% for block in section.blocks %}
        {% if block.type == 'collection_tab' and block.settings.collection != blank %}
          <button
            class="tab-button{% if forloop.first %} active{% endif %}"
            data-tab="{{ block.settings.collection.handle }}"
            {{ block.shopify_attributes }}>
            {{ block.settings.collection.title }}
          </button>
        {% endif %}
      {% endfor %}
    </div>
    <div class="tab-content">
      {% for block in section.blocks %}
        {% if block.type == 'collection_tab' and block.settings.collection != blank %}
          <div class="tab-pane{% if forloop.first %} active{% endif %}" id="{{ block.settings.collection.handle }}">
            <div class="course-cards">
              {% for product in block.settings.collection.products %}
                <a href="{{ product.url }}" class="rh-course-card">
                  <div class="rh-course-image">
                    {%- if product.featured_image != blank -%}
                      {{ product.featured_image | img_url: '456x' | img_tag: product.title, 'rh-course-image-img' }}
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'rh-course-image-img' }}
                    {%- endif -%}
                  </div>
                  <div class="rh-course-content">
                    <div class="rh-course-header">
                      <div class="rh-course-type">
                        <svg width="12" height="13">
                          <use href="#icon-course" />
                        </svg>
                        <div class="rh-label">Course</div>
                      </div>
                      <div class="rh-course-title">
                        {{ product.title }}
                      </div>
                    </div>
                    <div class="rh-course-author-info">
                      <div class="rh-author">by {{ product.vendor }}</div>
                      <div class="rh-libraries">
                        <div class="rh-label">Libraries:</div>
                        <div class="rh-library-tag">{{ product.type }}</div>
                      </div>
                    </div>
                    <div class="rh-divider"></div>
                    <div class="rh-course-meta">
                      {% for tag in product.tags %}
                        {% if tag contains 'Level:' %}
                          <div class="rh-meta-item">
                            <svg width="14" height="15">
                              <use href="#icon-level" />
                            </svg>
                            <div class="rh-label">{{ tag | remove: 'Level:' | strip }}</div>
                          </div>
                        {% endif %}
                        {% if tag contains 'Duration:' %}
                          <div class="rh-meta-item">
                            <svg width="16" height="17">
                              <use href="#icon-time" />
                            </svg>
                            <div class="rh-label">{{ tag | remove: 'Duration:' | strip }}</div>
                          </div>
                        {% endif %}
                      {% endfor %}
                      <div class="rh-meta-item">
                        <svg width="16" height="17">
                          <use href="#icon-date" />
                        </svg>
                        <div class="rh-label">{{ product.published_at | date: "%d %b %Y" }}</div>
                      </div>
                    </div>
                  </div>
                </a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div></section><style>
/* courses section  */
.rh-course-sec-care {
  background: #ffffff;
  padding: 160px 20px;
}
.rh-course-sec-care .container-rh {
