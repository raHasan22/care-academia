  margin: 0 auto 48px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.rh-course-sec-care .container-rh .title-arros .title {
  color: #0D0D0D;
  font-family: "Ghost Trial"
  , sans-serif;
  font-weight: 500;
  font-size: 60px;
  letter-spacing: normal;
  line-height: 100%;
  margin: 0;
}

/* Tab Section Styles */
.tab-sec {
  margin-top: 48px;
  border: 1px solid #ECECEC;
  border-radius: 20px;
  padding: 48px;
}

.tab-buttons {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
  margin-bottom: 32px;
}

.tab-button {
  padding: 12px 24px;
  border: 1px solid #222875;
  border-radius: 999px;
  background: transparent;
  color: #222875;
  font-family: "Karla"
  , sans-serif;
  font-weight: 600;
  font-size: 16px;
  letter-spacing: normal;
  line-height: 150%;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.tab-button.active {
  background: #222875;
  color: #ffffff;
}

.tab-content {
  position: relative;
}

.tab-pane {
  display: none;
}

.tab-pane.active {
  display: block;
}

.course-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
}

.rh-course-card {
  width: 100%;
  background: white;
  box-shadow: 0 -1px 3px rgba(13, 13, 13, 0.10);
  border-radius: 8px;
  outline: 1px solid #ECECEC;
  outline-offset: -1px;
  display: flex;
  flex-direction: column;
  text-decoration: none;
}

.rh-course-image {
  display: block;
  width: 100%;
  height: 240px;
  overflow: hidden;
  background: #D9D9D9;
  border-radius: 8px 8px 0 0;
}
.rh-course-image > img{
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.rh-course-content {
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.rh-course-header {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.rh-course-type {
  display: flex;
  align-items: center;
  gap: 8px;
}

.rh-course-type svg,
.rh-meta-item svg {
  flex-shrink: 0;
}

.rh-meta-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.rh-meta-item svg {
  width: 16px;
  height: 16px;
}

.rh-course-title {
  color: #0D0D0D;
  font-family: "Ghost Trial"
  , sans-serif;
  font-size: 30px;
  letter-spacing: normal;
  font-weight: 500;
  line-height: 30px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 60px;
}

.rh-course-author-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rh-author {
  color: #0D0D0D;
  font-family: Karla
  , sans-serif;
  font-size: 14px;
  letter-spacing: normal;
  font-weight: 400;
  line-height: 21px;
}

.rh-libraries {
  display: flex;
  align-items: center;
  gap: 17px;
}

.rh-label {
  color: #0D0D0D;
  font-family: Karla
  , sans-serif;
  font-size: 14px;
  letter-spacing: normal;
  font-weight: 400;
  line-height: 21px;
}

.rh-library-tag {
  border-radius: 500px;
  color: #0D0D0D;
  font-family: Karla
  , sans-serif;
  font-size: 14px;
  letter-spacing: normal;
  font-weight: 400;
  line-height: 21px;
}

.rh-divider {
  height: 1px;
  background: #ECECEC;
  width: 100%;
  display: block;
}

.rh-course-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

/* Responsive styles */
@media (max-width: 1199px) {
  .course-cards {
    grid-template-columns: repeat(2, 1fr);
  }

  .rh-course-title {
    font-size: 24px;
    letter-spacing: normal;
    line-height: 28px;
