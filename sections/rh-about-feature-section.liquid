{% style %}
#{{ section.id }} *{
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

#{{ section.id }} .mh-container {
  max-width: 1426px;
  margin: 0 auto;
}

#{{ section.id }} .mh-section-title {
  font-family: "Ghost Trial", sans-serif;
  color: rgba(13, 13, 13, 1);
  font-weight: 500;
  font-size: 60px;
}

#{{ section.id }} .mh-section-subtitle {
  color: rgba(34, 40, 117, 1);
  font-family: "Karla", sans-serif;
  font-size: 20px;
  font-weight: 400;
  letter-spacing: 0.2%;
}

#{{ section.id }} .mh-section-description {
  font-family: "Karla", sans-serif;
  color: rgba(13, 13, 13, 1);
  font-size: 20px;
  font-weight: 400;
  line-height: 23px;
}

#{{ section.id }} .mh-btn-primary {
  font-family: "Karla", sans-serif;
  display: inline-block;
  border: 1px solid rgba(34, 40, 117, 1);
  border-radius: 50px;
  text-decoration: none;
  color: rgba(34, 40, 117, 1);
  font-size: 20px;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

#{{ section.id }} .mh-btn-primary::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(34, 40, 117, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

#{{ section.id }} .mh-btn-primary:hover::before {
  width: 300px;
  height: 300px;
}

#{{ section.id }} .mh-btn-primary:hover {
  background-color: rgba(34, 40, 117, 1);
  color: rgba(255, 255, 255, 1);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(34, 40, 117, 0.3);
}

#{{ section.id }} .mh-btn-primary:active {
  transform: translateY(0);
  box-shadow: 0 4px 15px rgba(34, 40, 117, 0.2);
}


@media screen and (max-width: 1024px) {
  #{{ section.id }} .mh-section-title {
    font-size: 40px;
  }
}


@media screen and (max-width: 767px) {
  #{{ section.id }} .mh-btn-primary {
    font-size: 14px;
  }
  #{{ section.id }} .mh-section-title {
    font-size: 32px;
  }
}

@media screen and (max-width: 510px) {
  #{{ section.id }} .mh-section-title {
    font-size: 26px;
  }
}

#{{ section.id }} {
  padding: 50px 0;
}

#{{ section.id }} .feature-wrapper {
  display: flex;
  align-items: center;
  gap: 100px;
}

#{{ section.id }} .feature-media {
  width: 50%;
  border-radius: 8px;
  background: rgba(203, 239, 255, 1);
  position: relative;
}

#{{ section.id }} .feature-media img {
  width: 100%;
  margin: 16px 0 -16px 16px;
}

#{{ section.id }} .feature-body {
  width: 42%;
}

#{{ section.id }} .feature-body .feature-label {
  margin-bottom: 10px;
}

#{{ section.id }} .feature-body .feature-heading {
  margin-bottom: 24px;
}

#{{ section.id }} .feature-body .feature-description {
  margin-bottom: 24px;
}

#{{ section.id }} .feature-body .feature-link {
  padding: 16px 32px;
}
/* layout options */
#{{ section.id }}.feature-reverse .feature-wrapper {
  flex-direction: row-reverse;
}

/* MH FEATURE BLOCK SECTION RESPONSIVE STYLES */
@media screen and (max-width: 1280px) {
  #{{ section.id }} .feature-wrapper {
    gap: 80px;
  }
  #{{ section.id }} .feature-body .feature-heading {
    margin-bottom: 18px;
  }

  #{{ section.id }} .feature-body .feature-link {
    padding: 12px 24px;
  }

  #{{ section.id }} .feature-body .feature-description {
    font-size: 16px;
    margin-bottom: 20px;
  }
}

@media screen and (max-width: 1130px) {
  #{{ section.id }} .feature-wrapper {
    gap: 60px;
  }
  #{{ section.id }} .feature-body .feature-heading {
    margin-bottom: 18px;
  }

  #{{ section.id }} .feature-body .feature-description {
    margin-bottom: 18px;
  }

  #{{ section.id }} .feature-body .feature-link {
    padding: 10px 22px;
  }
}

@media screen and (max-width: 1035px) {
  #{{ section.id }} .feature-body .feature-label {
    margin-bottom: 8px;
  }
  #{{ section.id }} .feature-body .feature-heading {
    margin-bottom: 12px;
  }
  #{{ section.id }} .feature-body .feature-description {
    margin-bottom: 14px;
  }

  #{{ section.id }} .feature-body .feature-link {
    padding: 8px 20px;
  }
}

@media screen and (max-width: 966px) {
  #{{ section.id }} .feature-body .feature-label {
    margin-bottom: 6px;
  }
  #{{ section.id }} .feature-body .feature-heading {
    margin-bottom: 10px;
    font-size: 28px;
  }
  #{{ section.id }} .feature-body .feature-description {
    margin-bottom: 12px;
  }

  #{{ section.id }} .feature-body .feature-link {
    padding: 8px 20px;
  }
}

@media screen and (max-width: 790px) {
  #{{ section.id }} .feature-wrapper,
  #{{ section.id }}.feature-reverse .feature-wrapper {
    flex-direction: column;
  }
  #{{ section.id }} .feature-media,
  #{{ section.id }} .feature-body {
    width: 100%;
  }
}
{% endstyle %}

<div class="mh-feature-block{% if section.settings.layout == 'reverse' %} feature-reverse{% endif %}" id="{{ section.id }}">
    <div class="mh-container">
      <div class="feature-wrapper">
        {% if section.settings.image != blank %}
        <div class="feature-media">
          <img src="{{ section.settings.image | img_url: '800x600' }}" alt="{{ section.settings.image.alt | default: 'Feature image' }}" />
        </div>
        {% endif %}
        <div class="feature-body">
          {% if section.settings.subtitle != blank %}
          <h4 class="mh-section-subtitle feature-label">{{ section.settings.subtitle }}</h4>
          {% endif %}
          
          {% if section.settings.title != blank %}
          <h2 class="mh-section-title feature-heading">{{ section.settings.title }}</h2>
          {% endif %}
          
          {% if section.settings.description != blank %}
          <p class="mh-section-description feature-description">
            {{ section.settings.description }}
          </p>
          {% endif %}
          
          {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <a href="{{ section.settings.button_url }}" class="mh-btn-primary feature-link">{{ section.settings.button_text }}</a>
          {% endif %}
        </div>
      </div>
    </div>
</div>

{% schema %}
{
  "name": "About Feature Section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Feature Image",
      "info": "Recommended size: 800x600px"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Meet the team"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our leadership"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our executives lead by example and guide us to accomplish great things every day. With experience across industries, their breadth and depth of expertise enable us to solve problems, realize our vision, and better serve our customersâ€”and each other."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Desktop Layout",
      "options": [
        {
          "value": "normal",
          "label": "Image Left, Content Right"
        },
        {
          "value": "reverse",
          "label": "Content Left, Image Right"
        }
      ],
      "default": "normal"
    }
  ],
  "presets": [
    {
      "name": "About Feature Section"
    }
  ]
}
{% endschema %}