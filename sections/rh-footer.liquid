<footer class="__rh-footer">
        <div class="__rh-footer-container">
            <div class="__rh-footer-top">
            <h3>{{ section.settings.hero_title | default: 'Get started with Care academia' }}</h3>
            <div class="__rh-actions">
                {% if section.settings.button_1_text != blank %}
                <a href="{{ section.settings.button_1_url | default: '#' }}">{{ section.settings.button_1_text }}</a>
                {% endif %}
                {% if section.settings.button_2_text != blank %}
                <a href="{{ section.settings.button_2_url | default: '#' }}">{{ section.settings.button_2_text }}</a>
                {% endif %}
            </div>
        </div>
        <!-- Footer items -->
         <div class="__rh-footer-items">

    <!-- Column 1 -->
    {% if section.settings.column_1_title != blank or section.settings.column_1_menu != blank %}
    <div class="__rh-footer-col">
      <h3>{{ section.settings.column_1_title | default: 'Support' }}</h3>
      {% if section.settings.column_1_menu != blank %}
      <ul>
        {% for link in linklists[section.settings.column_1_menu].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endif %}

    <!-- Column 2 -->
    {% if section.settings.column_2_title != blank or section.settings.column_2_menu != blank %}
    <div class="__rh-footer-col">
      <h3>{{ section.settings.column_2_title | default: 'Community' }}</h3>
      {% if section.settings.column_2_menu != blank %}
      <ul>
        {% for link in linklists[section.settings.column_2_menu].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endif %}

    <!-- Column 3 -->
    {% if section.settings.column_3_title != blank or section.settings.column_3_menu != blank %}
    <div class="__rh-footer-col">
      <h3>{{ section.settings.column_3_title | default: 'Company' }}</h3>
      {% if section.settings.column_3_menu != blank %}
      <ul>
        {% for link in linklists[section.settings.column_3_menu].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endif %}

    <!-- Column 4 -->
    {% if section.settings.column_4_title != blank or section.settings.column_4_menu != blank %}
    <div class="__rh-footer-col">
      <h3>{{ section.settings.column_4_title | default: 'Industries' }}</h3>
      {% if section.settings.column_4_menu != blank %}
      <ul>
        {% for link in linklists[section.settings.column_4_menu].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endif %}

    <!-- Newsletter -->
    <div class="__rh-footer-col __rh-validator">
      <h3>{{ section.settings.newsletter_title | default: 'Newsletter' }}</h3>
      <p>
        {{ section.settings.newsletter_description | default: 'Subscribe to our newsletter to stay updated with our latest courses and offers.' }}
      </p>
      {% form 'customer', id: 'footer-newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input type="email" 
               name="contact[email]" 
               placeholder="{{ section.settings.newsletter_placeholder | default: 'Email Address' }}" 
               required
               aria-label="{{ section.settings.newsletter_placeholder | default: 'Email Address' }}">
        <button type="submit">{{ section.settings.newsletter_button_text | default: 'Subscribe' }}</button>
      {% endform %}
    </div>

  </div>
        </div>
        <!-- footer bottom -->
   <div class="__rh-footer-bottom">
   <div class="__rh-container">
     <!-- logo -->
    <div class="__rh-logo">
      <div class="__rh-logo">{{ section.settings.footer_logo | default: 'Care Academia' }}</div>
    </div>

      <div class="__rh-language">
        {% if section.settings.language_icon != blank %}
        <img src="{{ section.settings.language_icon | img_url: '24x24' }}" alt="Language">
        {% endif %}
        {{ section.settings.language_text | default: 'English' }}
      </div>

        <div class="__rh-social-icons">
        {% if section.settings.linkedin_url != blank and section.settings.linkedin_icon != blank %}
        <a href="{{ section.settings.linkedin_url }}"><img src="{{ section.settings.linkedin_icon | img_url: '24x24' }}" alt="LinkedIn"></a>
        {% endif %}
        {% if section.settings.instagram_url != blank and section.settings.instagram_icon != blank %}
        <a href="{{ section.settings.instagram_url }}"><img src="{{ section.settings.instagram_icon | img_url: '24x24' }}" alt="Instagram"></a>
        {% endif %}
        {% if section.settings.facebook_url != blank and section.settings.facebook_icon != blank %}
        <a href="{{ section.settings.facebook_url }}"><img src="{{ section.settings.facebook_icon | img_url: '24x24' }}" alt="Facebook"></a>
        {% endif %}
        {% if section.settings.youtube_url != blank and section.settings.youtube_icon != blank %}
        <a href="{{ section.settings.youtube_url }}"><img src="{{ section.settings.youtube_icon | img_url: '24x24' }}" alt="YouTube"></a>
        {% endif %}
      </div>

    <!--  Links -->
    {% if section.settings.legal_menu != blank %}
    <div class="__rh-links">
      {% for link in linklists[section.settings.legal_menu].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>
    {% endif %}

    <!-- Right Side -->
    <div class="__rh-right">
      {% if section.settings.app_store_url != blank and section.settings.app_store_image != blank %}
      <a href="{{ section.settings.app_store_url }}"><img src="{{ section.settings.app_store_image | img_url: '120x40' }}" alt="App Store"></a>
      {% endif %}
      {% if section.settings.google_play_url != blank and section.settings.google_play_image != blank %}
      <a href="{{ section.settings.google_play_url }}"><img src="{{ section.settings.google_play_image | img_url: '120x40' }}" alt="Google Play"></a>
      {% endif %}
    </div>
   </div>
  </div>
</footer>

