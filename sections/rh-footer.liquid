{% style %}
.__rh-footer {
    width: 100%;
    background-color: #222875; 
}  
.__rh-footer *{
  font-family: "Ghost Trial", sans-serif;
  text-decoration: none;
}  

.__rh-footer-container {
    width: 100%;
    max-width: 1602px;
    margin: 0 auto;
    padding: 80px 20px 40px;

}

.__rh-footer-top {
    text-align: center;
    padding-bottom: 40px;
    border-bottom: 1px solid rgba(78, 83, 145, 1);
}

.__rh-footer-top h3 {
    color: #fff;
    font-size: 48px;
    font-weight: 500;
    line-height: 1.2; 
    letter-spacing: 0px;
    margin-bottom: 20px;
}

.__rh-footer-top .__rh-actions {
    padding: 20px 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
}

.__rh-footer-top .__rh-actions a {
    min-width: 160px;
    padding: 12px 20px;
    border: 1px solid #fff;
    border-radius: 999px;
    background-color: #fff;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: 0.2px;
    color: rgba(74, 51, 209, 1);
    cursor: pointer;
    transition: all 0.3s ease;
}

.__rh-footer-top .__rh-actions a:last-child {
    background-color: transparent;
    color: #fff;
}

.__rh-footer .__rh-footer-items {
    padding: 40px 20px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1.5fr; 
    gap: 30px;
}

/* Footer Column */
.__rh-footer-col h3 {
    margin-bottom: 16px;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    font-family: "Karla", sans-serif;
    font-size: 20px;
    font-weight: 400;
    letter-spacing: 0.2%;
}

.__rh-footer-col ul {
    list-style: none;
    padding: 0;
}

.__rh-footer-col ul li {
    margin-bottom: 8px;
}

.__rh-footer-col ul li a {
    transition: color 0.3s;
    color: rgba(255, 255, 255, 1);
    font-family: "Karla", sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 19px;
    letter-spacing: 0.5%;
}

.__rh-footer-col ul li a:hover {
  color: #fff;
}

/* Validator */
.__rh-footer-col.__rh-validator p {
    color: rgba(255, 255, 255, 1);
    font-family: "Karla", sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 25px;
    letter-spacing: 0.5%;
    margin-bottom: 35px;
}

.__rh-footer-col.__rh-validator form {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.__rh-footer-col.__rh-validator input {
  padding: 10px 15px;
  border-radius: 20px;
  border: none;
  outline: none;
  font-size: 14px;
}

.__rh-footer-col.__rh-validator button {
    padding: 10px 15px;
    border-radius: 20px;
    border: 1px solid #fff;
    background: transparent;
    color: #fff;
    cursor: pointer;
    transition: 0.3s;
    font-size: 14px;
}

.__rh-footer-col.__rh-validator button:hover {
    background: #fff;
    color: #1a1b57;
}

/* footer bottom */
.__rh-footer-bottom {
    background-color: rgba(31, 36, 106, 1); 
    color: white;
    padding: 20px;
}

.__rh-footer-bottom .__rh-container{
   width: 100%;
   max-width: 1562px;
   margin: 0 auto;
   display: flex;
   justify-content: space-between;
   align-items: center;
   flex-wrap: wrap;
   gap: 20px;
}

.__rh-footer-bottom .__rh-container .__rh-logo {
    color: rgba(255, 255, 255, 1);
    font-family: "Karla", sans-serif;
    font-size: 24px;
    font-weight: 600;
    line-height: 100%;
}

.__rh-footer-bottom .__rh-container .__rh-language {
  display: flex;
  align-items: center;
  gap: 5px;
  font-size: 14px;
  color: rgba(225, 187, 199, 1);
  cursor: pointer;
}

.__rh-footer-bottom .__rh-social-icons {
  display: flex;
  gap: 10px;
}

.__rh-footer-bottom .__rh-social-icons a{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px;
  border-radius: 50%;
  background: #111;
  color: white;
  text-decoration: none;
  font-size: 14px;
}

.__rh-footer-bottom .__rh-links {
  display: flex;
  gap: 20px;
  font-size: 14px;
}

.__rh-footer-bottom .__rh-links a {
color: rgba(255, 255, 255, 1);
font-family: "Karla", sans-serif;
font-size: 16px;
font-weight: 400;
line-height: 19px;
letter-spacing: 0.5%;
}

.__rh-footer-bottom .__rh-right {
  display: flex;
  gap: 10px;
}

.__rh-footer-bottom .__rh-right img {
  height: 35px;
  cursor: pointer;
}

/* Large Desktop (1200px and up) */
@media (min-width: 1200px) {
  .__rh-footer-container {
    padding: 120px 40px 60px;
  }
  
  .__rh-footer .__rh-footer-items {
    padding: 60px 40px;
    gap: 40px;
  }
  
  .__rh-footer-top h3 {
    font-size: 60px;
  }
  
  .__rh-footer-top .__rh-actions {
    gap: 24px;
  }
  
  .__rh-footer-top .__rh-actions a {
    min-width: 200px;
    padding: 14px 24px;
    font-size: 18px;
  }
}

/* Desktop (992px to 1199px) */
@media (min-width: 992px) and (max-width: 1199px) {
  .__rh-footer-container {
    padding: 100px 30px 50px;
  }
  
  .__rh-footer .__rh-footer-items {
    padding: 50px 30px;
    gap: 35px;
  }
  
  .__rh-footer-top h3 {
    font-size: 52px;
  }
  
  .__rh-footer-top .__rh-actions a {
    min-width: 180px;
    font-size: 16px;
  }
}

/* Tablet (768px to 991px) */
@media (min-width: 768px) and (max-width: 991px) {
  .__rh-footer-container {
    padding: 80px 25px 40px;
  }
  
  .__rh-footer .__rh-footer-items {
    grid-template-columns: repeat(2, 1fr);
    padding: 40px 25px;
    gap: 30px;
  }
  
  .__rh-footer-top h3 {
    font-size: 42px;
  }
  
  .__rh-footer-top .__rh-actions {
    gap: 16px;
  }
  
  .__rh-footer-top .__rh-actions a {
    min-width: 160px;
    padding: 12px 20px;
    font-size: 15px;
  }
  
  .__rh-footer-bottom .__rh-container {
    flex-direction: column;
    text-align: center;
    gap: 20px;
  }
  
  .__rh-footer-bottom .__rh-social-icons,
  .__rh-footer-bottom .__rh-right,
  .__rh-footer-bottom .__rh-links {
    justify-content: center;
  }
}

/* Mobile Large (481px to 767px) */
@media (min-width: 481px) and (max-width: 767px) {
  .__rh-footer-container {
    padding: 60px 20px 30px;
  }
  
  .__rh-footer .__rh-footer-items {
    grid-template-columns: repeat(2, 1fr);
    padding: 30px 20px;
    gap: 25px;
  }
  
  .__rh-footer-top h3 {
    font-size: 36px;
  }
  
  .__rh-footer-top .__rh-actions {
    flex-direction: column;
    gap: 12px;
  }
  
  .__rh-footer-top .__rh-actions a {
    width: 100%;
    max-width: 280px;
    padding: 12px 20px;
    font-size: 15px;
  }
  
  .__rh-footer-bottom .__rh-container {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
  
  .__rh-footer-bottom .__rh-social-icons,
  .__rh-footer-bottom .__rh-right,
  .__rh-footer-bottom .__rh-links {
    justify-content: center;
  }
  
  .__rh-footer-bottom .__rh-links {
    flex-wrap: wrap;
    gap: 15px;
  }
}

/* Mobile Small (320px to 480px) */
@media (max-width: 480px) {
  .__rh-footer-container {
    padding: 40px 15px 20px;
  }
  
  .__rh-footer .__rh-footer-items {
    grid-template-columns: 1fr;
    padding: 20px 15px;
    gap: 20px;
  }
  
  .__rh-footer-top {
    padding-bottom: 30px;
  }
  
  .__rh-footer-top h3 {
    font-size: 28px;
    margin-bottom: 15px;
  }
  
  .__rh-footer-top .__rh-actions {
    flex-direction: column;
    gap: 10px;
    padding: 15px 0;
  }
  
  .__rh-footer-top .__rh-actions a {
    width: 100%;
    padding: 12px 16px;
    font-size: 14px;
  }
  
  .__rh-footer-col h3 {
    font-size: 18px;
    margin-bottom: 12px;
  }
  
  .__rh-footer-col ul li a {
    font-size: 14px;
  }
  
  .__rh-footer-col.__rh-validator p {
    font-size: 14px;
    line-height: 22px;
    margin-bottom: 20px;
  }
  
  .__rh-footer-col.__rh-validator input,
  .__rh-footer-col.__rh-validator button {
    padding: 8px 12px;
    font-size: 13px;
  }
  
  .__rh-footer-bottom {
    padding: 15px;
  }
  
  .__rh-footer-bottom .__rh-container {
    flex-direction: column;
    text-align: center;
    gap: 12px;
  }
  
  .__rh-footer-bottom .__rh-container .__rh-logo {
    font-size: 20px;
  }
  
  .__rh-footer-bottom .__rh-container .__rh-language {
    font-size: 13px;
  }
  
  .__rh-footer-bottom .__rh-social-icons {
    justify-content: center;
    gap: 8px;
  }
  
  .__rh-footer-bottom .__rh-social-icons a {
    padding: 6px;
    font-size: 12px;
  }
  
  .__rh-footer-bottom .__rh-links {
    flex-direction: column;
    gap: 8px;
  }
  
  .__rh-footer-bottom .__rh-links a {
    font-size: 13px;
  }
  
  .__rh-footer-bottom .__rh-right {
    justify-content: center;
  }
  
  .__rh-footer-bottom .__rh-right img {
    height: 30px;
  }
}
