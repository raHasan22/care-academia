{% style %}
.mh-care-academia *{
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

   .mh-care-academia .mh-container {
  max-width: 1426px;
  margin: 0 auto;
}

.mh-care-academia .mh-section-title {
  font-family: "Ghost Trial", sans-serif;
  color: rgba(13, 13, 13, 1);
  font-weight: 500;
  font-size: 60px;
}

.mh-care-academia .mh-section-subtitle {
  color: rgba(34, 40, 117, 1);
  font-family: "Karla", sans-serif;
  font-size: 20px;
  font-weight: 400;
  letter-spacing: 0.2%;
}

.mh-care-academia .mh-section-description {
  font-family: "Karla", sans-serif;
  color: rgba(13, 13, 13, 1);
  font-size: 20px;
  font-weight: 400;
  line-height: 23px;
}

.mh-care-academia .mh-btn-primary {
  font-family: "Karla", sans-serif;
  display: inline-block;
  border: 1px solid rgba(34, 40, 117, 1);
  border-radius: 50px;
  text-decoration: none;
  color: rgba(34, 40, 117, 1);
  font-size: 20px;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.mh-care-academia .mh-btn-primary::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(34, 40, 117, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.mh-care-academia .mh-btn-primary:hover::before {
  width: 300px;
  height: 300px;
}

.mh-care-academia .mh-btn-primary:hover {
  background-color: rgba(34, 40, 117, 1);
  color: rgba(255, 255, 255, 1);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(34, 40, 117, 0.3);
}

.mh-care-academia .mh-btn-primary:active {
  transform: translateY(0);
  box-shadow: 0 4px 15px rgba(34, 40, 117, 0.2);
}


