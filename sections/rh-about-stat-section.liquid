    {% if section.settings.title != blank %}
    <h2 class="mh-section-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="mh-container">
      <div class="care">
        <!-- Left Side -->
        <div class="claims">
          {% if section.settings.claims_title != blank %}
          <h3 class="mh-section-title claims-title">{{ section.settings.claims_title }}</h3>
          {% endif %}
          <div class="claims-grid">
            {% for block in section.blocks %}
              {% if block.type == 'claim' %}
              <div class="claim-item">
                {% if block.settings.icon != blank %}
                <img
                  src="{{ block.settings.icon | img_url: '100x100' }}"
                  alt="{{ block.settings.icon.alt | default: 'Claim icon' }}"
                  class="claim-icon"
                />
                {% endif %}
                {% if block.settings.text != blank %}
                <p class="claim-text">
                  {{ block.settings.text }}
                </p>
                {% endif %}
              </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Right Side -->
        <div class="stats">
          {% for block in section.blocks %}
            {% if block.type == 'stat' %}
            <div class="stat-item">
              <h4 class="stat-number" data-target="{{ block.settings.number }}" data-suffix="{{ block.settings.suffix }}">0</h4>
              {% if block.settings.text != blank %}
              <p class="stat-text">{{ block.settings.text }}</p>
              {% endif %}
            </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

  <script>
    function counterUp(element, target, duration) {
  let start = 0;
  let step = Math.ceil(target / (duration / 16)); 

  let timer = setInterval(() => {
    start += step;
    if (start >= target) {
      element.textContent = target + (element.dataset.suffix || "");
      clearInterval(timer);
    } else {
      element.textContent = start + (element.dataset.suffix || "");
    }
  }, 16); // ~60fps
}

// Initialize everything when DOM is loaded
document.addEventListener("DOMContentLoaded", () => {
  // Initialize counter animation
  const counters = document.querySelectorAll(".stat-number");
  counters.forEach(counter => {
    let target = parseInt(counter.dataset.target);
    counterUp(counter, target, 2000); 
  });
});
  </script>

