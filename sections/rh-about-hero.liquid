{% style %}

.mh-about-hero *{
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

.mh-about-hero .mh-container {
  max-width: 1426px;
  margin: 0 auto;
}

.mh-about-hero .mh-section-title {
  font-family: "Ghost Trial", sans-serif;
  color: rgba(13, 13, 13, 1);
  font-size: 60px;
}

.mh-about-hero .mh-section-subtitle {
  color: rgba(34, 40, 117, 1);
  font-family: "Karla", sans-serif;
  font-size: 20px;
  font-weight: 400;
  letter-spacing: 0.2%;
}

.mh-about-hero .mh-section-description {
  font-family: "Karla", sans-serif;
  color: rgba(13, 13, 13, 1);
  font-size: 20px;
  font-weight: 400;
  line-height: 23px;
}

.mh-about-hero .mh-btn-primary {
  font-family: "Karla", sans-serif;
  display: inline-block;
  border: 1px solid rgba(34, 40, 117, 1);
  border-radius: 50px;
  text-decoration: none;
  color: rgba(34, 40, 117, 1);
  font-size: 20px;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.mh-about-hero .mh-btn-primary::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(34, 40, 117, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.mh-about-hero .mh-btn-primary:hover::before {
  width: 300px;
  height: 300px;
}

.mh-about-hero .mh-btn-primary:hover {
  background-color: rgba(34, 40, 117, 1);
  color: rgba(255, 255, 255, 1);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(34, 40, 117, 0.3);
}

.mh-about-hero .mh-btn-primary:active {
  transform: translateY(0);
  box-shadow: 0 4px 15px rgba(34, 40, 117, 0.2);
}

/* Reuse classes responsive styles */

@media screen and (max-width: 1024px) {
  .mh-about-hero .mh-section-title {
    font-size: 40px;
  }
}


@media screen and (max-width: 767px) {
  .mh-about-hero .mh-btn-primary {
    font-size: 14px;
  }
  .mh-about-hero .mh-section-title {
    font-size: 32px;
  }
}

@media screen and (max-width: 510px) {
  .mh-about-hero .mh-section-title {
    font-size: 26px;
  }
}

.mh-about-hero {
  width: 100%;
  background-color: #000000;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

{% if section.settings.background_image %}
.mh-about-hero {
  background-image: url('{{ section.settings.background_image | img_url: '1920x1080' }}');
}
{% endif %}

.mh-about-hero .hero-content {
  max-width: 560px;
  padding: 100px 0;
}

.mh-about-hero .hero-content .hero-title {
  font-family: "Ghost Trial", sans-serif;
  font-size: 72px;
  font-weight: 400;
  letter-spacing: -0.5px;
  color: rgba(255, 255, 255, 1);
  margin-bottom: 24px;
}

.mh-about-hero .hero-content .hero-description {
  font-family: "Karla", sans-serif;
  color: rgba(255, 255, 255, 1);
  font-size: 20px;
  font-weight: 400;
  line-height: 26px;
  letter-spacing: 0.2%;
  margin-bottom: 24px;
}

.mh-about-hero .hero-content .hero-btn {
  font-family: "Karla", sans-serif;
  max-width: 248px;
  height: 62px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  border: 1px solid rgba(255, 255, 255, 1);
  border-radius: 50px;
  text-decoration: none;
  color: rgba(255, 255, 255, 1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.mh-about-hero .hero-content .hero-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.mh-about-hero .hero-content .hero-btn:hover::before {
  width: 300px;
  height: 300px;
}

.mh-about-hero .hero-content .hero-btn:hover {
  background-color: rgba(255, 255, 255, 1);
  color: rgba(34, 40, 117, 1);
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(255, 255, 255, 0.3);
}

.mh-about-hero .hero-content .hero-btn:active {
  transform: translateY(-1px);
  box-shadow: 0 5px 20px rgba(255, 255, 255, 0.2);
}

.mh-about-hero .hero-content .hero-btn .play-icon {
  transition: transform 0.3s ease;
}

.mh-about-hero .hero-content .hero-btn:hover .play-icon {
  transform: scale(1.1);
}

/* About Hero Section Responsive Styles */
