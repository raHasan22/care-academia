  .rh-nav-section {
    display: none;
  }

  .rh-search-container {
    display: none;
  }

  .rh-mobile-menu-toggle {
    display: flex;
  }

  .rh-header-actions .rh-cta-buttons,
  .rh-auth-buttons {
    display: none;
  }

  .rh-logo-text {
    font-size: 24px;
    letter-spacing: normal;
  }
}

@media (max-width: 767px) {
  .rh-header-container {
    height: 70px;
    padding: 0 16px;
  }

  .rh-logo img {
    max-height: 50px;
  }

  .rh-logo-text {
    font-size: 20px;
    letter-spacing: normal;
  }

  .rh-mobile-menu {
    width: 280px;
  }
}

@media (max-width: 1200px) {
  .rh-nav-menu {
    gap: 24px;
  }

  .rh-search-container {
    max-width: 300px;
  }

  .rh-header-actions {
    gap: 16px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Mobile menu toggle
  const mobileToggle = document.querySelector('.rh-mobile-menu-toggle');
  const mobileMenu = document.querySelector('.rh-mobile-menu');
  const mobileOverlay = document.querySelector('.rh-mobile-overlay');
  
  if (mobileToggle) {
    mobileToggle.addEventListener('click', function() {
      this.classList.toggle('active');
      mobileMenu.classList.toggle('active');
      mobileOverlay.classList.toggle('active');
      document.body.style.overflow = this.classList.contains('active') ? 'hidden' : '';
    });
  }
  
  if (mobileOverlay) {
    mobileOverlay.addEventListener('click', function() {
      mobileToggle.classList.remove('active');
      mobileMenu.classList.remove('active');
      this.classList.remove('active');
      document.body.style.overflow = '';
    });
  }

  // Plans dropdown toggle
  const plansDropdown = document.querySelector('.rh-plans-dropdown');
  const plansBtn = document.querySelector('.rh-plans-btn');
  
  if (plansBtn) {
    plansBtn.addEventListener('click', function(e) {
      e.preventDefault();
      plansDropdown.classList.toggle('active');
    });
  }

  // Close plans dropdown when clicking outside
  document.addEventListener('click', function(e) {
    if (plansDropdown && !plansDropdown.contains(e.target)) {
      plansDropdown.classList.remove('active');
    }
  });
  
  // Sticky header scroll effect
  {% if section.settings.sticky_header %}
  const header = document.querySelector('.rh-header');
  
  window.addEventListener('scroll', function() {
    if (window.scrollY > 100) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  });
  {% endif %}
});
</script>

<header class="rh-header">
  <div class="rh-header-container">
    <!-- Logo -->
    <a href="{{ routes.root_url }}" class="rh-logo">
      {% if section.settings.logo != blank %}
        {{ section.settings.logo | image_url: width: 400 | image_tag: alt: shop.name, loading: 'eager' }}
      {% else %}
        <span class="rh-logo-text">{{ section.settings.logo_text | default: shop.name }}</span>
      {% endif %}
    </a>

    <!-- Navigation Section (Left) -->
    <div class="rh-nav-section">
      <!-- Desktop Navigation -->
      <nav class="rh-nav">
        {% if section.settings.main_menu != blank %}
          <ul class="rh-nav-menu">
            {% for link in section.settings.main_menu.links %}
              <li class="rh-nav-item">
                <a href="{{ link.url }}" class="rh-nav-link">{{ link.title }}</a>
                {% if link.links != blank %}
                  <ul class="rh-dropdown">
                    {% for child_link in link.links %}
                      <li>
                        <a href="{{ child_link.url }}" class="rh-dropdown-link">{{ child_link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </nav>

      <!-- Search Field -->
      {% if section.settings.show_search_field %}
        <div class="rh-search-container">
          <form action="{{ routes.search_url }}" method="get" class="rh-search-form">
            <input 
              type="search" 
              name="q" 
              placeholder="{{ section.settings.search_placeholder }}" 
              class="rh-search-input" 
              autocomplete="off"
            >
            <button type="submit" class="rh-search-submit" aria-label="Search">
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M21 21L16.514 16.506L21 21ZM19 10.5C19 15.194 15.194 19 10.5 19C5.806 19 2 15.194 2 10.5C2 5.806 5.806 2 10.5 2C15.194 2 19 5.806 19 10.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </form>
        </div>
      {% endif %}
    </div>

    <!-- Header Actions (Right) -->
    <div class="rh-header-actions">
      <!-- CTA Buttons -->
      {% if section.blocks.size > 0 %}
        <div class="rh-cta-buttons">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'cta_button' %}
                {% if block.settings.button_link != blank %}
                  {% if block.settings.button_style == 'text' %}
                    <a href="{{ block.settings.button_link }}" class="rh-text-link">
                      {{ block.settings.button_text }}
                    </a>
                  {% else %}
                    <a href="{{ block.settings.button_link }}" 
                       class="{% if block.settings.button_style == 'primary' %}primary-button-ca{% else %}secondary-button-ca{% endif %}">
                      {{ block.settings.button_text }}
                    </a>
                  {% endif %}
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      <!-- Authentication Buttons (Separated with border) -->
      <div class="rh-auth-buttons">
        <!-- Sign In Button (only show if user is not logged in) -->
        {% unless customer %}
          <a href="{{ section.settings.signin_link }}" class="rh-signin-btn">
            {{ section.settings.signin_text }}
          </a>
        {% endunless %}

        <!-- View Plans Dropdown -->
        {% assign plan_blocks = section.blocks | where: 'type', 'plan_option' %}
        {% if plan_blocks.size > 0 %}
          <div class="rh-plans-dropdown">
            <button class="rh-plans-btn">
              {{ section.settings.view_plans_text }}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <div class="rh-plans-menu">
              {% for block in plan_blocks %}
                <a href="{{ block.settings.plan_link | default: '#' }}" class="rh-plan-item">
                  <div class="rh-plan-name">{{ block.settings.plan_name }}</div>
                  <div class="rh-plan-price">{{ block.settings.plan_price }}</div>
                  <div class="rh-plan-description">{{ block.settings.plan_description }}</div>
                </a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Account Icon (only show if user is logged in) -->
      {% if customer and section.settings.show_account %}
        <a href="{{ routes.account_url }}" class="rh-header-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 11C14.2091 11 16 9.20914 16 7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7C8 9.20914 9.79086 11 12 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}

      <!-- Cart Icon -->
      {% if section.settings.show_cart %}
        <a href="{{ routes.cart_url }}" class="rh-header-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 22C9.55228 22 10 21.5523 10 21C10 20.4477 9.55228 20 9 20C8.44772 20 8 20.4477 8 21C8 21.5523 8.44772 22 9 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M20 22C20.5523 22 21 21.5523 21 21C21 20.4477 20.5523 20 20 20C19.4477 20 19 20.4477 19 21C19 21.5523 19.4477 22 20 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 1H5L7.68 14.39C7.77144 14.8504 8.02191 15.264 8.38755 15.5583C8.75318 15.8526 9.2107 16.009 9.68 16H19.4C19.8693 16.009 20.3268 15.8526 20.6925 15.5583C21.0581 15.264 21.3086 14.8504 21.4 14.39L23 6H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          {% if cart.item_count > 0 %}
            <span id="cart-count" style="position: absolute; top: -8px; right: -8px; background: #222875; color: white; border-radius: 50%; width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: 600;">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      {% endif %}

      <!-- Mobile Menu Toggle -->
      <button class="rh-mobile-menu-toggle" aria-label="Toggle mobile menu">
        <span class="rh-hamburger-line"></span>
        <span class="rh-hamburger-line"></span>
        <span class="rh-hamburger-line"></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav class="rh-mobile-menu">
    <!-- Mobile Search -->
    {% if section.settings.show_search_field %}
      <div class="rh-mobile-search">
        <form action="{{ routes.search_url }}" method="get" class="rh-mobile-search-form">
          <input 
            type="search" 
            name="q" 
            placeholder="{{ section.settings.search_placeholder }}" 
            class="rh-mobile-search-input" 
            autocomplete="off"
          >
          <button type="submit" class="rh-mobile-search-submit" aria-label="Search">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 21L16.514 16.506L21 21ZM19 10.5C19 15.194 15.194 19 10.5 19C5.806 19 2 15.194 2 10.5C2 5.806 5.806 2 10.5 2C15.194 2 19 5.806 19 10.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </form>
      </div>
    {% endif %}

    {% if section.settings.main_menu != blank %}
      <ul class="rh-mobile-nav-menu">
        {% for link in section.settings.main_menu.links %}
          <li class="rh-mobile-nav-item">
            <a href="{{ link.url }}" class="rh-mobile-nav-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    <!-- Mobile Actions -->
    <div class="rh-mobile-actions">
      <!-- Sign In Button for Mobile -->
      {% unless customer %}
        <a href="{{ section.settings.signin_link }}" 
           class="secondary-button-ca"
           style="width: 100%; text-align: center; margin-bottom: 12px;">
          {{ section.settings.signin_text }}
        </a>
      {% endunless %}

      <!-- View Plans for Mobile -->
      {% assign plan_blocks = section.blocks | where: 'type', 'plan_option' %}
      {% if plan_blocks.size > 0 %}
        <a href="#" 
           class="primary-button-ca"
           style="width: 100%; text-align: center; margin-bottom: 12px;">
          {{ section.settings.view_plans_text }}
        </a>
      {% endif %}

      <!-- Other CTA Buttons -->
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'cta_button' %}
            {% if block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" 
                 class="{% if block.settings.button_style == 'primary' %}primary-button-ca{% else %}secondary-button-ca{% endif %}"
                 style="width: 100%; text-align: center; margin-bottom: 12px;">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Mobile Contact Info -->
    {% if section.settings.phone_number != blank or section.settings.email != blank %}
      <div class="rh-mobile-contact">
        {% if section.settings.phone_number != blank %}
          <a href="tel:{{ section.settings.phone_number | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="rh-mobile-contact-item">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M22 16.92V19.92C22.0011 20.1985 21.9441 20.4742 21.8325 20.7293C21.7209 20.9845 21.5573 21.2136 21.3521 21.4019C21.1468 21.5901 20.9046 21.7335 20.6407 21.8227C20.3769 21.9119 20.0974 21.9451 19.82 21.92C16.7428 21.5856 13.787 20.5341 11.19 18.85C8.77382 17.3147 6.72533 15.2662 5.18999 12.85C3.49997 10.2412 2.44824 7.27099 2.11999 4.18C2.095 3.90347 2.12787 3.62476 2.21649 3.36162C2.30512 3.09849 2.44756 2.85669 2.63476 2.65162C2.82196 2.44655 3.0498 2.28271 3.30379 2.17052C3.55777 2.05833 3.83233 2.00026 4.10999 2H7.10999C7.59531 1.99522 8.06579 2.16708 8.43376 2.48353C8.80173 2.79999 9.04207 3.23945 9.10999 3.72C9.23662 4.68007 9.47144 5.62273 9.80999 6.53C9.94454 6.88792 9.97366 7.27691 9.8939 7.65088C9.81415 8.02485 9.62886 8.36811 9.35999 8.64L8.08999 9.91C9.51355 12.4135 11.5865 14.4864 14.09 15.91L15.36 14.64C15.6319 14.3711 15.9751 14.1858 16.3491 14.1061C16.7231 14.0263 17.1121 14.0555 17.47 14.19C18.3773 14.5286 19.3199 14.7634 20.28 14.89C20.7658 14.9585 21.2094 15.2032 21.5265 15.5775C21.8437 15.9518 22.0122 16.4296 22 16.92Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            {{ section.settings.phone_number }}
          </a>
        {% endif %}
        {% if section.settings.email != blank %}
          <a href="mailto:{{ section.settings.email }}" class="rh-mobile-contact-item">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            {{ section.settings.email }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </nav>

  <!-- Mobile Overlay -->
  <div class="rh-mobile-overlay"></div>
</header>
