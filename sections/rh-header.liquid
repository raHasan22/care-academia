{% schema %}
{
  "name": "RH Header",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text (if no image)",
      "default": "Care Academia"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 80,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo Width",
      "default": 140
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_search_field",
      "label": "Show Search Field",
      "default": true
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search Placeholder Text",
      "default": "what do you want to learn today?"
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show Cart Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "label": "Show Account Icon",
      "default": true
    },
    {
      "type": "header",
      "content": "Authentication Buttons"
    },
    {
      "type": "text",
      "id": "signin_text",
      "label": "Sign In Button Text",
      "default": "Sign in"
    },
    {
      "type": "url",
      "id": "signin_link",
      "label": "Sign In Link",
      "default": "/account/login"
    },
    {
      "type": "text",
      "id": "view_plans_text",
      "label": "View Plans Button Text",
      "default": "View Plans"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "header_bg",
      "label": "Header Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#222875"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link Hover Color",
      "default": "#CBEFFF"
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Sticky Header",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show Bottom Border",
      "default": true
    },
    {
      "type": "header",
      "content": "Mobile Menu"
    },
    {
      "type": "color",
      "id": "mobile_menu_bg",
      "label": "Mobile Menu Background",
      "default": "#222875"
    },
    {
      "type": "color",
      "id": "mobile_menu_text",
      "label": "Mobile Menu Text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Contact Info"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address"
    }
  ],
  "blocks": [
    {
      "type": "cta_button",
      "name": "CTA Button",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Contact Sales"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "text",
              "label": "Text Link"
            }
          ],
          "default": "text"
        }
      ]
    },
    {
      "type": "plan_option",
      "name": "Plan Option",
      "settings": [
        {
          "type": "text",
          "id": "plan_name",
          "label": "Plan Name",
          "default": "Individual Plan"
        },
        {
          "type": "text",
          "id": "plan_price",
          "label": "Plan Price",
          "default": "$29/month"
        },
        {
          "type": "textarea",
          "id": "plan_description",
          "label": "Plan Description",
          "default": "Perfect for individual learners"
        },
        {
          "type": "url",
          "id": "plan_link",
          "label": "Plan Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RH Header",
      "blocks": [
        {
          "type": "cta_button",
          "settings": {
            "button_text": "Contact Sales",
            "button_style": "text"
          }
        },
        {
          "type": "plan_option",
          "settings": {
            "plan_name": "Individual Plan",
            "plan_price": "$29/month",
            "plan_description": "Perfect for individual learners"
          }
        },
        {
          "type": "plan_option",
          "settings": {
            "plan_name": "Business Plan",
            "plan_price": "$99/month",
            "plan_description": "For teams and organizations"
          }
        },
        {
          "type": "plan_option",
          "settings": {
            "plan_name": "Enterprise Plan",
            "plan_price": "Custom",
            "plan_description": "Scalable solutions for large organizations"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.rh-header {
  background: {{ section.settings.header_bg }};
  {% if section.settings.sticky_header %}
  position: sticky;
  top: 0;
  z-index: 1000;
  {% endif %}
  {% if section.settings.show_border %}
  border-bottom: 1px solid rgba(34, 40, 117, 0.1);
  {% endif %}
  transition: all 0.3s ease;
}

.rh-header.scrolled {
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
}

.rh-header-container {
  max-width: 1441px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  align-items: center;
  height: 80px;
  gap: 40px;
}

/* Logo Styles */
.rh-logo {
  display: flex;
  align-items: center;
  text-decoration: none;
  flex-shrink: 0;
  z-index: 10;
}

.rh-logo img {
  width: {{ section.settings.logo_width }}px;
  height: auto;
  max-height: 60px;
  object-fit: contain;
}

.rh-logo-text {
  font-family: "Ghost Trial", sans-serif;
  font-weight: 700;
  font-size: 28px;
  letter-spacing: normal;
  color: {{ section.settings.text_color }};
  line-height: 1;
}

/* Navigation Styles - Left Section */
.rh-nav-section {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 40px;
}

.rh-nav {
  display: flex;
  align-items: center;
}

.rh-nav-menu {
  display: flex;
  align-items: center;
  gap: 32px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.rh-nav-item {
  position: relative;
}

.rh-nav-link {
  color: {{ section.settings.text_color }};
  text-decoration: none;
  font-family: "Karla", sans-serif;
  font-weight: 500;
  font-size: 16px;
  letter-spacing: normal;
  line-height: 1.5;
  padding: 8px 0;
  position: relative;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.rh-nav-link:hover {
  color: {{ section.settings.text_color }};
}

.rh-nav-link::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: {{ section.settings.text_color }};
  transition: width 0.3s ease;
}

.rh-nav-link:hover::after {
  width: 100%;
}

/* Dropdown Menu */
.rh-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  min-width: 200px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  padding: 16px 0;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s ease;
  z-index: 1000;
}

.rh-nav-item:hover .rh-dropdown {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.rh-dropdown-link {
  display: block;
  padding: 12px 20px;
  color: {{ section.settings.text_color }};
  text-decoration: none;
  font-family: "Karla", sans-serif;
  font-weight: 400;
  font-size: 14px;
  letter-spacing: normal;
  transition: all 0.2s ease;
}

.rh-dropdown-link:hover {
  background: {{ section.settings.link_hover_color }};
  color: {{ section.settings.text_color }};
}

/* Search Field Styles */
.rh-search-container {
  flex: 1;
  max-width: 400px;
  margin: 0 20px;
}

.rh-search-form {
  position: relative;
  width: 100%;
}

.rh-search-input {
  width: 100%;
  padding: 12px 45px 12px 20px;
  border: 1px solid #E0E0E0;
  border-radius: 24px;
  font-family: "Karla", sans-serif;
  font-size: 14px;
  letter-spacing: normal;
  outline: none;
  transition: all 0.3s ease;
  background: #F8F9FA;
}

.rh-search-input:focus {
  border-color: {{ section.settings.text_color }};
  background: white;
  box-shadow: 0 0 0 3px rgba(34, 40, 117, 0.1);
}

.rh-search-input::placeholder {
  color: #999;
  font-style: italic;
}

.rh-search-submit {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  padding: 8px;
  cursor: pointer;
  color: #999;
  transition: color 0.3s ease;
}

.rh-search-submit:hover {
  color: {{ section.settings.text_color }};
}

.rh-search-submit svg {
  width: 20px;
  height: 20px;
}

/* Header Actions - Right Section */
.rh-header-actions {
  display: flex;
  align-items: center;
  gap: 20px;
  flex-shrink: 0;
  margin-left: auto;
}

.rh-header-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  color: {{ section.settings.text_color }};
  text-decoration: none;
  border-radius: 8px;
  transition: all 0.3s ease;
  position: relative;
}

.rh-header-icon:hover {
  background: {{ section.settings.link_hover_color }};
  color: {{ section.settings.text_color }};
}

.rh-header-icon svg {
  width: 24px;
  height: 24px;
}

/* CTA Buttons */
.rh-cta-buttons {
  display: flex;
  gap: 16px;
  align-items: center;
}

.rh-text-link {
  color: {{ section.settings.text_color }};
  text-decoration: none;
  font-family: "Karla", sans-serif;
  font-weight: 500;
  font-size: 16px;
  letter-spacing: normal;
  padding: 8px 16px;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.rh-text-link:hover {
  color: {{ section.settings.text_color }};
  background: {{ section.settings.link_hover_color }};
  border-radius: 8px;
}

/* Authentication Buttons */
.rh-auth-buttons {
  display: flex;
  align-items: center;
  gap: 16px;
  padding-left: 20px;
  border-left: 1px solid rgba(34, 40, 117, 0.15);
}

.rh-signin-btn {
  color: {{ section.settings.text_color }};
  text-decoration: none;
  font-family: "Karla", sans-serif;
  font-weight: 500;
  font-size: 16px;
  letter-spacing: normal;
  padding: 8px 16px;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.rh-signin-btn:hover {
  color: {{ section.settings.text_color }};
  background: {{ section.settings.link_hover_color }};
  border-radius: 8px;
}

/* View Plans Dropdown */
.rh-plans-dropdown {
  position: relative;
}

.rh-plans-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 20px;
  background: {{ section.settings.text_color }};
  color: white;
  text-decoration: none;
  font-family: "Karla", sans-serif;
  font-weight: 600;
  font-size: 16px;
  letter-spacing: normal;
  border-radius: 8px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
  white-space: nowrap;
}

.rh-plans-btn:hover {
  background: rgba(34, 40, 117, 0.9);
  color: white;
}

.rh-plans-btn svg {
  width: 16px;
  height: 16px;
  transition: transform 0.3s ease;
}

.rh-plans-dropdown.active .rh-plans-btn svg {
  transform: rotate(180deg);
}

.rh-plans-menu {
  position: absolute;
  top: 100%;
  right: 0;
  min-width: 320px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  padding: 20px;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s ease;
  z-index: 1000;
  margin-top: 8px;
}

.rh-plans-dropdown.active .rh-plans-menu {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.rh-plan-item {
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 12px;
  transition: all 0.3s ease;
  text-decoration: none;
  display: block;
  border: 1px solid #f0f0f0;
}

.rh-plan-item:last-child {
  margin-bottom: 0;
}

.rh-plan-item:hover {
  background: {{ section.settings.link_hover_color }};
  border-color: {{ section.settings.text_color }};
}

.rh-plan-name {
  font-family: "Ghost Trial", sans-serif;
  font-weight: 600;
  font-size: 18px;
  letter-spacing: normal;
  color: {{ section.settings.text_color }};
  margin-bottom: 4px;
}

.rh-plan-price {
  font-family: "Karla", sans-serif;
  font-weight: 600;
  font-size: 16px;
  letter-spacing: normal;
  color: {{ section.settings.text_color }};
  margin-bottom: 8px;
}

.rh-plan-description {
  font-family: "Karla", sans-serif;
  font-weight: 400;
  font-size: 14px;
  letter-spacing: normal;
  color: #666;
  line-height: 1.4;
}

/* Mobile Menu */
.rh-mobile-menu-toggle {
  display: none;
  flex-direction: column;
  gap: 4px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 8px;
  z-index: 1001;
}

.rh-hamburger-line {
  width: 24px;
  height: 2px;
  background: {{ section.settings.text_color }};
  transition: all 0.3s ease;
}

.rh-mobile-menu-toggle.active .rh-hamburger-line:nth-child(1) {
  transform: rotate(45deg) translate(6px, 6px);
}

.rh-mobile-menu-toggle.active .rh-hamburger-line:nth-child(2) {
  opacity: 0;
}

.rh-mobile-menu-toggle.active .rh-hamburger-line:nth-child(3) {
  transform: rotate(-45deg) translate(6px, -6px);
}

.rh-mobile-menu {
  position: fixed;
  top: 0;
  right: -100%;
  width: 320px;
  height: 100vh;
  background: {{ section.settings.mobile_menu_bg }};
  padding: 100px 30px 30px;
  transition: right 0.3s ease;
  z-index: 1000;
  overflow-y: auto;
}

.rh-mobile-menu.active {
  right: 0;
}

.rh-mobile-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 999;
}

.rh-mobile-overlay.active {
  opacity: 1;
  visibility: visible;
}

.rh-mobile-nav-menu {
  list-style: none;
  margin: 0;
  padding: 0;
}

.rh-mobile-nav-item {
  margin-bottom: 8px;
}

.rh-mobile-nav-link {
  display: block;
  color: {{ section.settings.mobile_menu_text }};
  text-decoration: none;
  font-family: "Karla", sans-serif;
  font-weight: 500;
  font-size: 18px;
  letter-spacing: normal;
  padding: 16px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.rh-mobile-nav-link:hover {
  color: {{ section.settings.link_hover_color }};
  padding-left: 16px;
}

.rh-mobile-actions {
  margin-top: 40px;
  padding-top: 30px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.rh-mobile-contact {
  margin-top: 30px;
}

.rh-mobile-contact-item {
  display: flex;
  align-items: center;
  gap: 12px;
  color: {{ section.settings.mobile_menu_text }};
  text-decoration: none;
  font-family: "Karla", sans-serif;
  font-size: 16px;
  letter-spacing: normal;
  margin-bottom: 16px;
}

.rh-mobile-contact-item svg {
  width: 20px;
  height: 20px;
}

.rh-mobile-search {
  margin-bottom: 30px;
}

.rh-mobile-search-form {
  position: relative;
}

.rh-mobile-search-input {
  width: 100%;
  padding: 12px 40px 12px 16px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.1);
  color: {{ section.settings.mobile_menu_text }};
  font-family: "Karla", sans-serif;
  font-size: 16px;
  letter-spacing: normal;
  outline: none;
}

.rh-mobile-search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.rh-mobile-search-submit {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: {{ section.settings.mobile_menu_text }};
  padding: 8px;
  cursor: pointer;
}

.rh-mobile-search-submit svg {
  width: 20px;
  height: 20px;
}

/* Responsive Design */
