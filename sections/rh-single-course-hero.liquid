  color: #222875;
  margin: 0 0 24px;
  font-weight: 500;
}

.rh-single-course-hero .course-description {
  font-family: "Karla"
  , sans-serif;
  font-size: 18px;
  line-height: 1.6;
  color: #222875;
  margin: 0 0 32px;
}

/* Author Info */
.rh-single-course-hero .author-info {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 32px;
}

.rh-single-course-hero .author-image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
}

.rh-single-course-hero .author-name {
  font-family: "Karla"
  , sans-serif;
  font-size: 16px;
  color: #222875;
}

.rh-single-course-hero .action-button {
  margin-bottom: 40px;
  font-family: "Ghost Trial"
  , sans-serif;
  font-weight: 500;
  font-size: 24px;
  line-height: 100%;
  letter-spacing: 0;
  color: #222875;
}

/* Course Meta */
.rh-single-course-hero .course-meta-title {
  margin-bottom: 24px;
}
.rh-single-course-hero .course-meta-title h2 {
  font-family: "Ghost Trial"
  , sans-serif;
  font-weight: 500;
  font-size: 24px;
  line-height: 100%;
  letter-spacing: 0;
  color: #222875;
}
.rh-single-course-hero .course-meta {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 0;
}
.rh-single-course-hero .course-meta .meta-item:not(:last-child) {
  border-bottom: 1px solid #B9D9E8;
}

.rh-single-course-hero .meta-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 4px;
  padding: 12px 0;
}

.rh-single-course-hero .meta-label {
  font-family: Karla
  , sans-serif;
  font-size: 14px;
  font-weight: 400;
  color: #222875;
}

.rh-single-course-hero .meta-value {
  font-family: "Karla"
  , sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #222875;
}

/* Trial Card */
.rh-single-course-hero .trial-card {
  background: #ffffff;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

.rh-single-course-hero .trial-image {
  width: 100%;
  height: 240px;
  object-fit: cover;
}

.rh-single-course-hero .trial-content {
  padding: 32px;
}

.rh-single-course-hero .trial-title {
  font-family: "Ghost Trial"
  , sans-serif;
  font-size: 24px;
  color: #222875;
  margin: 0 0 16px;
  font-weight: 500;
}

.rh-single-course-hero .trial-description {
  font-family: "Karla"
  , sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: #222875;
  margin: 0 0 24px;
}

.rh-single-course-hero .trial-buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 32px;
}

/* Chat Section */
.rh-single-course-hero .chat-section {
  padding-top: 24px;
  border-top: 1px solid #ECECEC;
}

.rh-single-course-hero .chat-title {
  font-family: "Ghost Trial"
  , sans-serif;
  font-size: 18px;
  color: #222875;
  margin: 0 0 8px;
  font-weight: 500;
}

.rh-single-course-hero .chat-description {
  font-family: "Karla"
  , sans-serif;
  font-size: 14px;
  color: #222875;
  margin: 0 0 16px;
}
.rh-single-course-hero .rh-secondary-button {
  font-family: Karla;
  font-weight: 600;
  font-size: 20px;
  line-height: 150%;
  text-decoration: none;
  padding: 0;
  outline: none;
  border: none;
  background: transparent;
}

/* Responsive Styles */
@media (max-width: 1199px) {
  .rh-single-course-hero .container-rh {
    grid-template-columns: 1fr 350px;
    gap: 40px;
  }

  .rh-single-course-hero .course-title {
    font-size: 40px;
  }
}

@media (max-width: 991px) {
  .rh-single-course-hero .container-rh {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .rh-single-course-hero .course-content {
    padding-right: 0;
  }

  .rh-single-course-hero .trial-card {
    max-width: 600px;
  }
}

@media (max-width: 767px) {
  .rh-single-course-hero {
    padding: 40px 20px;
  }

  .rh-single-course-hero .course-title {
    font-size: 32px;
  }

  .rh-single-course-hero .course-description {
    font-size: 16px;
  }

  .rh-single-course-hero .course-meta {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .rh-single-course-hero .meta-item {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
}</style>