{
  "name": "RH Single Course Hero",
  "settings": [
    {
      "type": "text",
      "id": "trial_heading",
      "label": "Trial Section Heading",
      "default": "Try this course for free"
    },
    {
      "type": "text",
      "id": "trial_description",
      "label": "Trial Description",
      "default": "Access this course and other top-rated tech content with a free trial."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Free Individual trial"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Free Team Trial"
    }, {
      "type": "text",
      "id": "chat_heading",
      "label": "Chat Section Heading",
      "default": "Have questions?"
    }, {
      "type": "text",
      "id": "chat_description",
      "label": "Chat Description",
      "default": "Get them answered now."
    }, {
      "type": "text",
      "id": "chat_button_text",
      "label": "Chat Button Text",
      "default": "Start a live chat"
    }
  ],
  "presets": [
    {
      "name": "RH Single Course Hero"
    }
  ]
}{% endschema %}<div class="rh-single-course-hero">
<div class="container-rh">
  <div class="course-content">
    <div class="course-tag">
      <svg width="12" height="13">
        <use href="#icon-course" />
      </svg>
      Course
    </div>

    <h1 class="course-title">{{ product.title | default: 'Course Title' }}</h1>
    <div class="course-description">{{ product.description | default: 'Course description goes here.' }}</div>

    <div class="author-info">
      {% if product.featured_image != blank %}
        {{ product.featured_image | image_url: width: 40 | image_tag: 
            class: 'author-image',
            alt: product.vendor,
            width: 40,
            height: 40
        }}
      {% endif %}
      <span class="author-name">by {{ product.vendor | default: 'Author Name' }}</span>
    </div>

    <div class="action-button">
      <a href="/cart/{{ product.selected_or_first_available_variant.id }}:1" class="primary-button-ca">Get Started</a>
    </div>
    <div class="course-meta-title">
      <h2>Course Details</h2>
    </div>
    <div class="course-meta">
      <div class="meta-item">
        <span class="meta-label">Level</span>
        <span class="meta-value">{{ product.metafields.custom.level.value | default: 'Intermediate' }}</span>
      </div>
      <div class="meta-item">
        <span class="meta-label">Duration</span>
        <span class="meta-value">{{ product.metafields.custom.duration.value | default: '2h 4s' }}</span>
      </div>
      <div class="meta-item">
        <span class="meta-label">Last updated</span>
        <span class="meta-value">{{ product.published_at | date: "%d %b %Y" }}</span>
      </div>
    </div>
  </div>

  <div class="trial-card">
    {% if product.featured_image != blank %}
      {{ product.featured_image | image_url: width: 400 | image_tag: 
        class: 'trial-image',
        alt: product.title,
        loading: 'lazy'
      }}
    {% endif %}

    <div class="trial-content">
      <h2 class="trial-title">{{ section.settings.trial_heading }}</h2>
      <p class="trial-description">{{ section.settings.trial_description }}</p>

      <div class="trial-buttons">
        <a href="/cart/{{ product.selected_or_first_available_variant.id }}:1" class="primary-button-ca">{{ section.settings.primary_button_text }}</a>
        <a href="/cart/{{ product.selected_or_first_available_variant.id }}:10" class="secondary-button-ca">{{ section.settings.secondary_button_text }}</a>
      </div>

      <div class="chat-section">
        <h3 class="chat-title">{{ section.settings.chat_heading }}</h3>
        <p class="chat-description">{{ section.settings.chat_description }}</p>
        <button class="rh-secondary-button">{{ section.settings.chat_button_text }}</button>
      </div>
    </div>
  </div>
</div>
</div>
<style>
/* Main Section */
.rh-single-course-hero {
  padding: 80px 20px;
  background: #cbefff;
}

/* Container */
.rh-single-course-hero .container-rh {
  max-width: 1432px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 400px;
  gap: 60px;
  align-items: start;
}

/* Course Content */
.rh-single-course-hero .course-content {
  padding-right: 40px;
}

.rh-single-course-hero .course-tag {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 16px;
  background: #ffffff;
  border-radius: 100px;
  margin-bottom: 24px;
  font-family: Karla
  , sans-serif;
  font-size: 14px;
  color: #222875;
}

.rh-single-course-hero .course-title {
  font-family: "Ghost Trial"
